{
  // ============================================
  // GitHub Copilot MCP Configuration
  // ============================================
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.chat.mcp.access": "all",
  "github.copilot.chat.mcp.autostart": "all",
  
  // ============================================
  // MCP Servers (Auto-Start on VS Code Open)
  // ============================================
  // Note: Some servers require API keys in User Settings
  // See .mcp/README.md for setup instructions
  
  "mcp.servers": {
    // File system operations
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${workspaceFolder}"
      ]
    },
    
    // Git operations
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "${workspaceFolder}"
      ]
    },
    
    // PostgreSQL database (requires sbcc.databaseUrl)
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres"
      ],
      "env": {
        "DATABASE_URL": "${config:sbcc.databaseUrl}"
      }
    },
    
    // GitHub API (requires sbcc.githubToken)
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${config:sbcc.githubToken}"
      }
    },
    
    // Custom Notion integration (requires sbcc.notionApiKey)
    "notion": {
      "command": "node",
      "args": [
        "${workspaceFolder}/.mcp/servers/notion-server.js"
      ],
      "env": {
        "NOTION_API_KEY": "${config:sbcc.notionApiKey}"
      }
    },
    
    // Custom React component analyzer
    "react": {
      "command": "node",
      "args": [
        "${workspaceFolder}/.mcp/servers/react-server.js"
      ],
      "env": {
        "FRONTEND_PATH": "${workspaceFolder}/frontend/src"
      }
    },
    
    // HTTP fetch for API testing
    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ]
    },
    
    // Memory for context persistence
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    
    // Browser automation
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ]
    }
  },
  
  // ============================================
  // Editor Configuration
  // ============================================
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    ".mcp/node_modules": true,
    "frontend/node_modules": true
  }
}