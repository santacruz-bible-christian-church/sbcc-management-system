# Database Configuration
DATABASE_URL=postgresql://your_db_user:your_db_password@your_db_host/your_db_name?sslmode=require&channel_binding=require

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS & CSRF
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=True
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Frontend URL (used in password reset emails)
FRONTEND_URL=http://localhost:5173

# Security Flags (override to True in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_REFERRER_POLICY=same-origin

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Gmail SMTP Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_TIMEOUT=10

# Your Gmail credentials
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here

# From email address
DEFAULT_FROM_EMAIL=SBCC Management <your-email@gmail.com>

# Brevo (Sendinblue) HTTP API for production
# Sign up at https://brevo.com and get API key from Settings > SMTP & API
# Verify your Gmail address as a sender in Brevo before sending
BREVO_API_KEY=

# ========== Cloudflare R2 Storage (Production) ==========
# Set USE_R2_STORAGE=true in production to store files in cloud storage
# Without this, files are saved locally and LOST on redeploy (ephemeral disks)

USE_R2_STORAGE=false
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-api-token-access-key
R2_SECRET_ACCESS_KEY=your-r2-api-token-secret
R2_BUCKET_NAME=sbcc-files
# Public URL from R2 dashboard (after enabling public access on bucket)
R2_PUBLIC_URL=https://pub-XXXXX.r2.dev
